<% @quiz.questions.each_with_index do |question,index|  %>
    <%= question.nb %>
    <%= question.description %><br>
    <% @quiz_answers.each do |an| %>
        <% if an.question_id == question.id %>
            <%= an.answer %><br>
        <% end %>
    <% end %>
<% end %>
<% if can? :create, QuizResult %>
<%= link_to "Grade", {:controller => "quiz_results", :action => "new", :pending_quiz_id => @pending_quiz.id} %>
<% end %>